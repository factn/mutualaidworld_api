<p id="notice"><%= notice %></p>

<h1>Missions</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Verb</th>
      <th>Noun</th>
      <th>Requestor</th>
      <th>Solver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.id %></td>
        <td><%= mission.verb.description %></td>
        <td><%= mission.noun.description %></td>
        <td><%= mission.requestor.email %></td>
        <td><%= mission.solver.email %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_mission_path %>
